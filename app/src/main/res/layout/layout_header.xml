<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:gravity="end|center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dip_10"
    android:paddingTop="@dimen/dip_2"
    android:paddingRight="@dimen/dip_10"
    android:paddingBottom="@dimen/dip_2">

    <ImageView
        android:id="@+id/iconHomeWifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dip_15"
        android:src="@mipmap/wifi_enabled"
        app:tint="@color/main_color" />

    <ImageView
        android:id="@+id/iconHomeBluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dip_15"
        android:src="@mipmap/bluetooth_on"
        app:tint="@color/main_color" />

    <com.industio.ecigarette.view.battery.BatteryView
        android:id="@+id/batteryView"
        android:layout_width="@dimen/dip_58"
        android:layout_height="@dimen/dip_28"
        android:layout_marginEnd="@dimen/dip_5" />

    <ImageView
        android:id="@+id/imageChange"
        android:layout_width="@dimen/dip_17"
        android:layout_height="@dimen/dip_32"
        android:src="@mipmap/icon_charge" />
</LinearLayout>
